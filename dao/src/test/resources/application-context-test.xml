<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="ds2" class="org.apache.commons.dbcp.BasicDataSource" >
        <property name="driverClassName" value="org.h2.Driver"/>
        <property name="url" value="jdbc:h2:mem:testdb" />
    </bean>
    <bean id="dao2" class="com.epam.esm.dao.impl.CertificateDaoImpl">
        <property name="jdbcTemplate" ref="jt2"/>
    </bean>
    <bean id="jt2" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="ds2"/>
    </bean>
</beans>